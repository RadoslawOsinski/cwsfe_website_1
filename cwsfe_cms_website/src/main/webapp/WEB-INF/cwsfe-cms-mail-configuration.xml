<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="cmsMailSession" class="org.springframework.jndi.JndiObjectFactoryBean">
        <property name="jndiName" value="java:/mail/CWSFEMail" />
    </bean>

    <bean id="cmsMailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="session" ref="cmsMailSession" />
    </bean>

</beans>