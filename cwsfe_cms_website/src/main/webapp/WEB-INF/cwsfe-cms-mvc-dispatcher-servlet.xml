<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.2.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

    <context:component-scan base-package="eu.com.cwsfe.cms"/>

    <context:annotation-config/>

    <mvc:resources mapping="/CWSFE_CMS/favicon.ico" location="/resources-cwsfe-cms/favicon.ico" order="0"/>
    <mvc:annotation-driven/>
    <bean id="cwsfe_cms_BeanNameViewResolver" class="org.springframework.web.servlet.view.BeanNameViewResolver"/>

    <bean id="cwsfe_cms_MultipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <!--<property name="maxUploadSize" value="2000000"/>-->
    </bean>

    <bean id="cwsfe_cms_InternalResourceViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/pages/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <bean id="cwsfe_cms_localeResolver" class="org.springframework.web.servlet.i18n.CookieLocaleResolver">
        <property name="defaultLocale" value="en"/>
    </bean>
    <bean id="cwsfe_cms_localeChangeInterceptor" class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
        <property name="paramName" value="language"/>
    </bean>
    <bean id="cwsfe_cms_messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basenames">
            <list>
                <value>cwsfe_cms_i18n</value>
            </list>
        </property>
    </bean>

    <bean id="cwsfe_cms_ControllerClassNameHandlerMapping" class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping">
        <property name="interceptors">
            <list>
                <ref bean="cwsfe_cms_localeChangeInterceptor"/>
            </list>
        </property>
    </bean>

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <bean id="cwsfe_cms_LocaleChangeInterceptor" class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
                <property name="paramName" value="language"/>
            </bean>
        </mvc:interceptor>
    </mvc:interceptors>

    <mvc:resources mapping="/resources-cwsfe-cms/**" location="/resources-cwsfe-cms/" cache-period="31556926"/>

    <import resource="cwsfe-cms-dao.xml"/>
    <import resource="cwsfe-cms-cache.xml"/>

    <bean id="cwsfe_cms_blogPostImageServlet" class="eu.com.cwsfe.cms.images.BlogPostImageServlet"/>
    <bean id="cwsfe_cms_newsImageServlet" class="eu.com.cwsfe.cms.images.NewsImageServlet"/>

    <import resource="cwsfe-cms-mail-configuration.xml"/>
    <import resource="cwsfe-cms-spring-security.xml"/>

</beans>
