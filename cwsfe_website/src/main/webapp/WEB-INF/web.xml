<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0" metadata-complete="true">

    <display-name>CWSFE</display-name>

    <filter>
        <filter-name>cwsfe-encoding-filter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>gzipFilter</filter-name>
        <filter-class>eu.com.cwsfe.cms.compression.GZipServletFilter</filter-class>
    </filter>

    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
    <!--<filter>-->
    <!--<filter-name>sessionExpirationFilter</filter-name>-->
    <!--<filter-class>eu.com.cwsfe.cms.login.SessionExpirationFilter</filter-class>-->
    <!--</filter>-->

    <locale-encoding-mapping-list>
        <locale-encoding-mapping>
            <locale>en</locale>
            <encoding>UTF-8</encoding>
        </locale-encoding-mapping>
        <locale-encoding-mapping>
            <locale>pl</locale>
            <encoding>UTF-8</encoding>
        </locale-encoding-mapping>
    </locale-encoding-mapping-list>

    <filter-mapping>
        <filter-name>cwsfe-encoding-filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--<listener>-->
        <!--<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>-->
    <!--</listener>-->

    <filter-mapping>
        <filter-name>gzipFilter</filter-name>
        <url-pattern>*.js</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>gzipFilter</filter-name>
        <url-pattern>*.css</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>gzipFilter</filter-name>
        <url-pattern>*.png</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>gzipFilter</filter-name>
        <url-pattern>*.jpg</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
        <!--<url-pattern>/CWSFE_CMS_loginPage</url-pattern>-->
        <!--<url-pattern>/CWSFE_CMS_loginFailed</url-pattern>-->
        <!--<url-pattern>/j_spring_security_check</url-pattern>-->
        <!--<url-pattern>/j_spring_security_logout</url-pattern>-->
    </filter-mapping>
    <!--<filter-mapping>-->
    <!--<filter-name>sessionExpirationFilter</filter-name>-->
    <!--<url-pattern>*.jsp</url-pattern>-->
    <!--</filter-mapping>-->

    <!--<listener>-->
    <!--<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>-->
    <!--</listener>-->

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>cwsfe-mvc-dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>

    <servlet-mapping>
        <servlet-name>cwsfe-mvc-dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!--<filter>-->
        <!--<filter-name>SimplePageCachingFilter</filter-name>-->
        <!--<filter-class>net.sf.ehcache.constructs.web.filter.SimplePageCachingFilter-->
        <!--</filter-class>-->
    <!--</filter>-->

    <!--<filter-mapping>-->
        <!--<filter-name>SimplePageCachingFilter</filter-name>-->
        <!--<url-pattern>/*</url-pattern>-->
    <!--</filter-mapping>-->

    <servlet>
        <servlet-name>blogPostImageServlet</servlet-name>
        <servlet-class>eu.com.cwsfe.cms.images.BlogPostImageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>newsImageServlet</servlet-name>
        <servlet-class>eu.com.cwsfe.cms.images.NewsImageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>cwsfe_cms_blogPostImageServlet</servlet-name>
        <servlet-class>eu.com.cwsfe.cms.images.BlogPostImageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>cwsfe_cms_newsImageServlet</servlet-name>
        <servlet-class>eu.com.cwsfe.cms.images.NewsImageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>blogPostImageServlet</servlet-name>
        <url-pattern>/blogPostImages/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>newsImageServlet</servlet-name>
        <url-pattern>/newsImages/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>cwsfe_cms_blogPostImageServlet</servlet-name>
        <url-pattern>/CWSFE_CMS/blogPostImages/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>cwsfe_cms_newsImageServlet</servlet-name>
        <url-pattern>/CWSFE_CMS/newsImages/*</url-pattern>
    </servlet-mapping>

    <!--<servlet-mapping>-->
        <!--<servlet-name>blogPostImageServlet</servlet-name>-->
        <!--<url-pattern>/blogPostImages/*</url-pattern>-->
    <!--</servlet-mapping>-->

    <!--<servlet-mapping>-->
        <!--<servlet-name>newsImageServlet</servlet-name>-->
        <!--<url-pattern>/newsImages/*</url-pattern>-->
    <!--</servlet-mapping>-->

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/cwsfe-mvc-dispatcher-servlet.xml</param-value>
    </context-param>

    <!--<resource-ref>-->
        <!--<description>CWSFE DATABASE</description>-->
        <!--<res-ref-name>jdbc/cwsfe</res-ref-name>-->
        <!--<res-type>javax.sql.DataSource</res-type>-->
        <!--<res-auth>Container</res-auth>-->
    <!--</resource-ref>-->

    <!--<context-param>-->
        <!--<param-name>log4jConfigLocation</param-name>-->
        <!--<param-value>/WEB-INF/log4j.properties</param-value>-->
    <!--</context-param>-->

    <error-page>
        <error-code>404</error-code>
        <location>/errors/404.html</location>
    </error-page>

</web-app>
