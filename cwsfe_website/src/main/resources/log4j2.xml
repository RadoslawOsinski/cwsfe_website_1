<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" strict="true" monitorInterval="30" debug="false">
    <Properties>
        <Property name="log-path">/var/log/wildfly/logs</Property>
    </Properties>
    <Appenders>
        <RollingFile name="CWSFE_CMS_LOG" fileName="${log-path}/cwsfe_cms.log" filePattern="${log-path}/cwsfe_cms-%d{yyyy-MM-dd}.log" append="false">
            <PatternLayout pattern="[%p] %d [%t] %x %c - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>
        <RollingFile name="CWSFE_LOG" fileName="${log-path}/cwsfe.log" filePattern="${log-path}/cwsfe-%d{yyyy-MM-dd}.log" append="false">
            <PatternLayout pattern="[%p] %d [%t] %x %c - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.apache.log4j.xml" level="debug">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="eu.com.cwsfe.cms" level="INFO" additivity="false">
            <appender-ref ref="CWSFE_CMS_LOG"/>
        </Logger>
        <Logger name="eu.com.cwsfe" level="INFO" additivity="false">
            <appender-ref ref="CWSFE_LOG"/>
        </Logger>
        <Root level="WARN">
            <AppenderRef ref="CWSFE_LOG"/>
        </Root>
    </Loggers>
</Configuration>